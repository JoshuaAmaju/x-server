{
  "compilerOptions": {
    "target": "es5",
    "outDir": "build",
    "lib": [
      "esnext",
      "es2020"
    ],
    "allowJs": true,
    "declaration": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
  },
  "include": [
    "src",
    "example"
  ]
}